
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes to all documents.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow a logged-in user to read a document from the 'teachers' collection
    // if the document's 'uid' field matches their own authentication UID.
    // This rule securely enables the application to check a user's role upon login.
    match /teachers/{teacherId} {
      allow read: if request.auth.uid != null && resource.data.uid == request.auth.uid;
    }

    // Rules for website_content: allow anyone to read, only admins to write.
    function isAdmin() {
      // In a real app, this would check a custom claim or an admin list.
      // For this app, the admin logic is handled in the application code.
      // This rule is a placeholder; actual content updates are done via a trusted server environment.
      return request.auth != null; // Simplified for this context
    }
    
    match /website_content/{contentId} {
      allow read: if true;
      allow write: if false; // All writes should go through the trusted server action
    }
  }
}
