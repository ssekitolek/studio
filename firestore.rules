rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access on the client side.
    // Server Actions using the Admin SDK will bypass these rules.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access for website content.
    // Writes are handled by server actions.
    match /website_content/{docId} {
      allow read: if true;
      allow write: if false; 
    }
    
    // This is the critical rule for our authentication system.
    // It allows a logged-in user to read ONLY their own document
    // from the 'teachers' collection to determine their role.
    match /teachers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // All other client-side operations (e.g., writing to 'students' or 'classes')
    // are blocked by the default deny rule. They must be performed
    // by trusted Server Actions.
  }
}
